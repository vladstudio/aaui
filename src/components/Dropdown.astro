---
const {extraClass = ""} = Astro.props
---

<div x-id="['dropdown']" x-data="{ open: false }">
   <span class="inline-flex" x-ref="button" @click="open=!open">
      <slot name="trigger" />
   </span>

   <div
      x-anchor.bottom-start.offset.6="$refs.button"
      x-cloak
      x-show="open"
      x-transition.opacity
      @click.away="open=false"
      @keydown.escape.window.stop.prevent="open=false"
      class={extraClass + " kPaper z-40 text-sm shadow-lg shadow-stone-900/10"}>
      <slot />
   </div>
</div>
