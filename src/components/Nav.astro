---
import Link from "@components/aaui/Link.astro"
const path = Astro.url.pathname
---

<div class="flex items-center gap-4 bg-white p-4 shadow shadow-stone-500/10">
  <Link
    class={`underline ${path === "/" ? "!bg-pink-100" : ""}`}
    tabindex="0"
    href="/">
    Home
  </Link>
  <Link
    class={`underline ${path === "/test/123" ? "!bg-pink-100" : ""}`}
    tabindex="0"
    href="/test/123">
    Test 123
  </Link>
  <Link
    class={`underline ${path === "/pocketbase" ? "!bg-pink-100" : ""}`}
    tabindex="0"
    href="/pocketbase">
    Pocketbase
  </Link>
  <div class="flex-1"></div>
</div>
