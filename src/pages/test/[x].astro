---
const {x} = Astro.params
import Layout from "@layouts/Layout.astro"
import {Image} from "astro:assets"
---

<Layout title="Welcome to Astro.">
  <div class="grid gap-8 p-8">
    <h1>remote image</h1>
    <img
      src="https://placehold.co/200x300"
      width={200}
      height={300}
      alt="kitten"
    />
    <h1>local image</h1>
    <Image
      src="/images/test.jpg"
      width={200}
      height={200}
      alt="A bird sitting on a nest of eggs."
    />
    <div class="">
      url param = <code class="rounded bg-stone-200 px-1">{x}</code>
    </div>
  </div>
</Layout>
